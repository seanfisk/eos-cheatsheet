from os.path import join

def options(ctx):
    pass

def configure(ctx):
    pass

def build(ctx):
    ctx(features='sphinx',
        builders='html latexpdf epub man info',
        source='conf.py',
        # Turn warnings into errors. Helps them get fixed more quickly :)
        warningiserror=True,
        # Warn about all missing references.
        nitpicky=True,
    )
