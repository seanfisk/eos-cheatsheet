# -*- mode: python; coding: utf-8; -*-

from os.path import join

def options(ctx):
    pass

def configure(ctx):
    pass

def build(ctx):
    for builder in ['man', 'html', 'info']:
        ctx(features='sphinx',
            builder=builder,
            source='conf.py',
            # Turn warnings into errors. Helps them get fixed more quickly :)
            warningiserror=True,
            # Warn about all missing references.
            nitpicky=True,
        )
